@model Technician
@{
    string title = ViewBag.Action + " Incident";
    ViewBag.Title = title;
}

@*Add Validation to Add Edit Pages*@
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TechnicianID">Technician ID</label>
        <input asp-for="TechnicianID" class="form-control">
        @*<select asp-for="TechnicianID"
                asp-items="@(new SelectList(ViewBag.Technicians, "TechnicianID", "TechnicianID", Model.TechnicianID.ToString()))"
                class="form-control">
            <option value="">select a Technician</option>
        </select>*@
    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <input type="hidden" asp-for="TechnicianID" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    @if (ViewBag.Action == "Add")
    {
        <a asp-controller="Technicians" asp-action="Index"
           class="btn btn-primary">Cancel</a>
    }
    else
    {
        <a asp-action="Edit"
           class="btn btn-primary">Cancel Edit</a>
    }
</form>