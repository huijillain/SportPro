@model Customer
@{
    string title = ViewBag.Action + " Customer";
    ViewBag.Title = title;
}

@*Add Validation to Add Edit Pages*@
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    @if (ViewBag.Action == "Edit")
    {
        <input asp-for="CustomerID" type="hidden" value="@Model.CustomerID" />
    }

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="PostalCode">Postal Code</label>
        <input asp-for="PostalCode" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CountryID">Country</label>
        <select asp-for="CountryID" class="form-control"
                asp-items="@(new SelectList(ViewBag.Countries, "CountryID", "Name", Model.CountryID))">
                           <!--use the asp- items tag helper instead of Select-->
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" value=@Model.Phone>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" value=@Model.Email>
    </div>

    <input type="hidden" asp-for="CustomerID" />

    <button type="submit" class="btn btn-primary">Save</button>
    @if (ViewBag.Action == "Add")
    {
        <a asp-controller="Home" asp-action="Index"
           class="btn btn-primary">Cancel</a>
    }
    else
    {
        <a asp-action="Index"
           class="btn btn-primary">Cancel Edit</a>
    }
</form>
