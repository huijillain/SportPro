@model List<Customer>

@{
    ViewBag.Title = "Customer Manager";
}

<h1>Customer Manager</h1>
<table class="table table-boardered table-striped">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>City</th>
            <th>Province</th>
            <th>Postal Code</th>
            <th>Country ID</th>
            <th>Phone</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in @Model)
        {
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Address</td>
                <td>@customer.City</td>
                <td>@customer.State</td>
                <td>@customer.PostalCode</td>
                <td>@customer.CountryID</td>
                <td>@customer.Phone</td>
                <td>@customer.Email</td>
                <td>
                    <a asp-controller="Customers" asp-action="Edit"
                       asp-route-id="@customer.CustomerID">Edit</a>
                </td>
                <td>
                    <a asp-controller="Customers" asp-action="Delete"
                       asp-route-id="@customer.CustomerID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />
<br />
<a asp-controller="Customers" asp-action="Add" class="btn btn-primary">Add Customer</a>