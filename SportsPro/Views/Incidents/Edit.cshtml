@model Incident
@{
    string title = ViewBag.Action + " Incident";
    ViewBag.Title = title;
}

@*Add Validation to Add Edit Pages*@
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="IncidentID">Incident ID</label>
        <select asp-for="IncidentID"
                asp-items="@(new SelectList(ViewBag.Incidents, "IncidentID", "IncidentID", Model.IncidentID.ToString()))"
                class="form-control">
            <option value="">select a Incident</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CustomerID">Customer ID</label>
        <input asp-for="CustomerID" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ProductID">Product ID</label>
        <input asp-for="ProductID" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="TechnicianID">Technician ID</label>
        <input asp-for="TechnicianID" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="DateOpened">Date Opened</label>
        <input asp-for="DateOpened" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="DateClosed">Date Closed</label>
        <input asp-for="DateClosed" class="form-control">
    </div>

    <input type="hidden" asp-for="IncidentID" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    @if (ViewBag.Action == "Add")
    {
        <a asp-controller="Incidents" asp-action="Index"
           class="btn btn-primary">Cancel</a>
    }
    else
    {
        <a asp-action="Edit"
           class="btn btn-primary">Cancel Edit</a>
    }
</form>
